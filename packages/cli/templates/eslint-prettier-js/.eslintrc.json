{
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"rules": {
		"prettier/prettier": "error",
		"curly": ["error", "all"],
		"quotes": ["error", "double"]
	}
}
