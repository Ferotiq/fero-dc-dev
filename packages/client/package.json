{
  "name": "@ferod/client",
  "version": "0.0.8",
  "description": "An extension on Discord.JS that makes it simpler and safer to create Discord bots.",
  "author": "Evan <evanrayweigel@outlook.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "tsup.config.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "ts-node-esm --experimental-specifier-resolution=node ./test/index.ts",
    "pretty": "prettier --check \"src/**/*.{ts,tsx,scss}\"",
    "pretty-fix": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint-fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "prepare": "pnpm build && pnpm lint && pnpm pretty"
  },
  "dependencies": {
    "discord.js": "14.11.0",
    "glob": "10.2.2",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "4.14.194",
    "@types/node": "20.1.0",
    "dotenv": "16.0.3",
    "ts-node": "10.9.1"
  }
}
